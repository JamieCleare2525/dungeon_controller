= form_for(@campaign) do |f|

  = render partial: "shared/errors", locals: {record: @campaign}

  .row
    .col-12.form-group
      = f.label :title, class: "col-12 control-label"
      .col-12
        = f.text_field :title, autofocus: true , class: "form-control"

  .row
    .col-12.form-group
      = f.label :description, class: "col-12 control-label"
      .col-12
        = f.text_area :description, autofocus: true, class: "form-control"

  .row
    .col-5.form-group
      = f.label "Available Characters", class: "col-12 control-label"
      .col-12
        = f.select :available_characters, options_from_collection_for_select(@available_characters, "id", "name"), {}, multiple: true, class: "width_100"

    .col-1
      .float-left
        = link_to "<", "#", class: "btn btn-primary", id: "unassign_character_btn"
    .col-1
      .float-right
        = link_to ">", "#", class: "btn btn-primary", id: "assign_character_btn"

    .col-5.form-group
      = f.label "Assigned Characters", class: "col-12 control-label"
      .col-12
        = f.select :assigned_characters, options_from_collection_for_select(@assigned_characters, "id", "name"), {}, multiple: true, class: "width_100"

  .row
    .col-12.text-center
      = f.submit class: "btn btn-primary", id: "campaign_submit"
